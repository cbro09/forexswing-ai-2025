{
  "manifest_version": 3,
  "name": "ForexSwing AI Companion",
  "version": "1.0.0",
  "description": "AI-powered forex analysis overlay for trading platforms",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://tradingview.com/*", 
    "https://www.forex.com/*",
    "https://www.oanda.com/*",
    "http://localhost:8082/*",
    "http://localhost:8080/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.tradingview.com/*",
        "https://tradingview.com/*",
        "https://www.forex.com/*",
        "https://www.oanda.com/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "ForexSwing AI Companion",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}